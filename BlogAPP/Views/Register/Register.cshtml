@{
}
@model BlogAPP.Models.User
<div class="container">
<h1>User Register Screen</h1>
<form method="post">
    <div>
    <label asp-for="UserName"></label>
    <input asp-for="UserName" class="form-control" />
    <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div>
    <label asp-for="UserSurname"></label>
    <input asp-for="UserSurname" class="form-control" />
    <span asp-validation-for="UserSurname" class="text-danger"></span>
    </div>
    <div>
    <label asp-for="UserEmail"></label>
    <input asp-for="UserEmail" type="email" class="form-control" />
    <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <div>
    <label asp-for="UserPassword">Password:</label>
    <input asp-for="UserPassword" class="form-control" type="password" />
    <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="mt-3">Sign Up</button>
     <p class="mt-3">If you have an account, <a asp-controller="Login" asp-action="Index">you can log in</a></p>


</form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 