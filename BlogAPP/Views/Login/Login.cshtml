@model BlogAPP.Models.User
<div class="container">
    <h1>User Sign In Screen</h1>
    <form method="post" asp-action="Login">
        <div class="form-group">
            <label asp-for="UserEmail" class="control-label"></label>
            <input asp-for="UserEmail" type="email" class="form-control" />
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserPassword" class="control-label">Password:</label>
            <input asp-for="UserPassword" type="password" class="form-control" />
            <span asp-validation-for="UserPassword" class="text-danger"></span>
        </div>

        <button class="btn btn-primary mt-3" type="submit">Log In</button>
        <p class="mt-3"><a asp-controller="Account" asp-action="Register">Don't you have an account yet?</a></p>
    </form>
</div>
